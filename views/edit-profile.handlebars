    <main>
        <ul id="input_thing">
            <form id="addFriendForm" role="form" method="get" action="/add">
                <h2 style = "text-align:center;">Add new contact information</h2>
                 <!--
                            <select id = "type" name = "type" form = "type-form">
                                <option value="volvo">Volvo</option>
                                <option value="saab">Saab</option>
                                <option value="opel">Opel</option>
                                <option value="audi">Audi</option>
                            </select>  
                        -->
                    <div class="form-group">
                        <label for="name"><h4>Type of information</h4></label>                   
                            <input type="text" class="form-control" id="type" placeholder="Example: Phone" name="type">
                    </div>
                    <div class="form-group">
                        <label for="usage"><h4>Usage</h4></label>
                            <input type="text" class="form-control" id="usage" placeholder="Example: Home" name="usage">
                    </div>
                    <div class="form-group">
                        <label for="content"><h4>Content</h4></label>
                            <input type="text" class="form-control" id="content" placeholder="Example: 123-456-789" name="content">
                    </div>
                    <br>
                <input type="submit" id="submitBtn" class="btn btn-default" value="Add"></input>
            </form>
        </ul>
    </main>
	</body>
